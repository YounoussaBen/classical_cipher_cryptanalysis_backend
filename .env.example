# Application
APP_NAME=Cryptanalysis Platform
APP_ENV=development
DEBUG=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./cryptanalysis.db

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# Analysis settings
MAX_CIPHERTEXT_LENGTH=100000
DEFAULT_TIMEOUT_SECONDS=30
MAX_PARALLEL_ENGINES=4

# AI Services (Gemini)
GEMINI_API_KEY=key-placeholder-change-in-production
GEMINI_MODEL=gemini-2.5-flash-lite
ENABLE_AI_FORMATTING=true
